//login
.login
	.bloque_login
		overflow-x auto
		background c5
		text-align center
		position fixed
		height 100%
		.form
			.field
				position relative
				//display inline-block
			.field i
					left 14px
					top 0px
					position absolute
					height 25px
					width 25px
					border-right 1px solid rgba(0, 0, 0, 0.1)
					box-shadow 1px 0 0 rgba(255, 255, 255, 0.7)
					color c1
					text-align center
					line-height 28px
					transition all 0.1s ease-out
					pointer-events none
				input[type=text],input[type=password]
					font-family 'Lato', Calibri, Arial, sans-serif
					font-size 12px
					font-weight 200
					text-shadow 0 1px 0 rgba(255,255,255,0.8)
					/* Size and position */
					width 60%
					//padding 10px 18px 10px 45px
					padding 5px 5px 5px 40px
					/* Styles */
					border none /* Remove the default border */
					box-shadow inset 0 0 5px rgba(0,0,0,0.1), inset 0 3px 2px rgba(0,0,0,0.1)
					border-radius 3px
					background #f9f9f9
					color black
					transition color 0.1s ease-out
				input[type=text]
					margin-bottom 2px
				input[type=text]:hover ~ i,input[type=password]:hover ~ i
					color c4
				input[type=text]:focus ~ i,input[type=password]:focus ~ i
					color black
				input[type=text]:focus,input[type=password]:focus,button[type=submit]:focus
					outline out
			.submit
				display inline-block
				width 40px
				height 40px
				//padding 1px
				z-index 16
				background c5
				//border-radius 50%
				box-shadow 0 0 2px rgba(0,0,0,0.1), 0 3px 2px rgba(0,0,0,0.1),inset 0 -3px 2px rgba(0,0,0,0.2)
			.submit:after
				width 10px
				height 10px
				position absolute
				top -2px
				left 30px
				background #ffffff
				box-shadow 0 62px white, -32px 31px white
			button
				width 100%
				height 100%
				line-height 1.75
				color white
				border none
				border-radius inherit
				background linear-gradient(c4, c4)
				box-shadow inset 0 1px 0 rgba(255,255,255,0.3), 0 1px 2px rgba(0,0,0,0.35), inset 0 3px 2px rgba(255,255,255,0.2), inset 0 -3px 2px rgba(0,0,0,0.1)
				cursor pointer
			button:hover,button[type=submit]:focus
				background c4
				transition all 0.1s ease-out
			button:active
				background c2
				box-shadow inset 0 0 5px rgba(0,0,0,0.3), inset 0 3px 4px rgba(0,0,0,0.3)
