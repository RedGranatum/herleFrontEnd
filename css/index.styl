/*==================================
	Alert container
====================================*/
#lala-alert-container
	position fixed
	height 540px
	width 250px
	bottom 0
	right 0
	z-index 20
#lala-alert-wrapper
	height auto
	padding 10px
/*==================================
	Alerts
====================================*/
.lala-alert
	position relative
	padding 25px 10px 10px
	font-size 14px
	margin-top 5px
	opacity 1
	line-height 1.4
	//border-radius 3px
	border 1px solid transparent
	cursor default
	transition all 0.5s ease-in-out /* Edit for fadeout time */
	-webkit-user-select none /* Chrome all / Safari all */
	-moz-user-select none /* Firefox all */
	-ms-user-select none /* IE 10+ */
	user-select none /* Likely future */
.lala-alert span
	opacity 0.7
	transition all 0.25s ease-in-out /* Edit for fadeout time */
.lala-alert span:hover
	opacity 1.0
.alert-success
	color white
	background-color c4
.alert-success > span
	color white
.close-alert-x
	position absolute
	float right
	top 8px
	right 8px
	cursor pointer
	outline none
.fade-out
	opacity 0
/*==================================
	Alert Animation
====================================*/
.animation-target
	animation animation 1500ms linear both
